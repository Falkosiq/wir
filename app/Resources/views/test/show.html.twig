{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <h1>Test</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ test.id }}</td>
            </tr>
            <tr>
                <th>Minfps</th>
                <td>{{ test.minFps }}</td>
            </tr>
            <tr>
                <th>Avgfps</th>
                <td>{{ test.avgFps }}</td>
            </tr>
            <tr>
                <th>Maxfps</th>
                <td>{{ test.maxFps }}</td>
            </tr>
            <tr>
                <th>Settings</th>
                <td>{{ test.settings }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ test.user }}</td>
            </tr>
            <tr>
                <th>PC</th>
                <td>{{ test.pc }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_index') }}">Back to the list</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('test_edit', { 'id': test.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
